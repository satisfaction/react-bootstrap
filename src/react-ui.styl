$gray=#f5f5f5
$gray-dark=#e6e6e6
$red=#CA0D0D
$white=#fff

$bg-color=$gray
$bg-color-disabled=#f8f8f8
$border-color=#B3B3B3
$color=#666
$shadow-color=#333

font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
font-size: 12px;

.react-ui-button,
.react-ui-checkbox,
.react-ui-select,
.react-ui-text-input
  display inline-block
  box-sizing: border-box

  button,
  input[type=text]
    outline-style none
    border 1px solid $border-color
    border-radius 2px
    color $color
    margin 0
    padding 0

  button,
    background-color #f5f5f5
    background-image linear-gradient($white, $gray-dark)
    cursor pointer

    &:not([disabled])

      &:hover
        background-color $gray-dark
        background-image linear-gradient(#f3f3f3, $gray-dark)

      &:active
        background-image none
        box-shadow rgba(0,0,0,0.05) 0px 2px 4px 0px inset

    &[disabled]
      background-color $bg-color-disabled
      background-image none
      opacity 0.6

.react-ui-button
  button
    padding 10px

.react-ui-checkbox
  cursor pointer

  i:before
    color $color
    font-size 18px
    position relative
    top 2px

.react-ui-select
  position relative

  &.react-ui-select-is-collapsed ul
    display none

  *
    cursor pointer

  .react-ui-select-caret
    height 30px
    line-height 30px
    width 15px

    position absolute
    right 0
    top 0

    &:after
      content '\25BE'

  ul
    background-color white
    border 1px solid $border-color
    list-style none
    margin 0
    padding 0
    width 100%

    position absolute
    top 30px


    li
      border-bottom 1px solid $border-color
      padding 5px

      &:last-child
        border-bottom none

      &.react-ui-select-option-is-selected
        font-weight bold


.react-ui-text-input

  input[type=text]
    background-color $white
    background-image linear-gradient(#f9f9f9, $white)
    line-height 30px
    padding 0 5px

    &[disabled]
      background-color $bg-color-disabled
      background-image none

  &.react-ui-is-invalid input[type=text]
    border 1px solid $red

.react-ui-radio-button

  .react-ui-radio-button-option
    cursor pointer
    list-style none
    padding 5px 0

  .react-ui-radio-button-disc
    &:before
      color $color
      font-size 18px
      position relative
      top 1px

  .react-ui-radio-button-disc,
  .react-ui-radio-button-text
    display inline-block

  .react-ui-radio-button-text
    margin-left 5px






